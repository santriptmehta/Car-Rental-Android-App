<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ActivityPages.RawSummeryBooking">

    <ImageView
        android:id="@+id/greenImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/greenticket200"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/confirm_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Booking Has been Confirmed."
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/greenImage"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/confirm_Text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car will be at your location"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/confirm_Text"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
   <ImageView
       android:id="@+id/emojii"
       android:layout_width="100dp"
       android:layout_height="100dp"
       android:layout_marginTop="20dp"
       android:src="@drawable/emoji_emotions"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/confirm_Text_2"/>
    <ImageView
        android:id="@+id/linee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/linear_scale"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emojii"/>


</androidx.constraintlayout.widget.ConstraintLayout>